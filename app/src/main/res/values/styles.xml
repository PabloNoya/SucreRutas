<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="android:colorPrimary">@color/primaryLightColor</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/accentColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/ic_launcher_background</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_state_list</item>
        <item name="rippleColor">@color/primaryLightColor</item>
        <item name="chipStrokeColor">@drawable/chip_stroke_state_list</item>
        <item name="android:textSize">28sp</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
